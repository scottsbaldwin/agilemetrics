<h2>Create an Account</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="field">
    <%= f.label :login %>
    <%= f.text_field :login, :class => "leftAlign" %>
  </div>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name, :class => "leftAlign" %>
  </div>

  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, :class => "leftAlign" %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, :class => "leftAlign" %>
  </div>

  <div class="field">
    <div><i>(leave blank if you don't want to change it)</i></div>
    <%= f.label :password %>
    <%= f.password_field :password, :class=> "leftAlign" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, :class => "leftAlign" %>
  </div>

  <div class="actions"><%= f.submit "Sign up", :class => "button" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>
